[{
  "name": "${container_name}",
  "image": "${image}",
  "networkMode": "awsvpc",

  "environment": [
    {
      "name": "PORT",
      "value": "${port}"
    },
    {
      "name": "NODE_ENV",
      "value": "${node_env}"
    },
    {
      "name": "LOGGER_LEVEL",
      "value": "${logger_level}"
    },
    {
      "name": "SUPPRESS_NO_CONFIG_WARNING",
      "value": "${suppress_no_config_warning}"
    },
    {
      "name": "CONTROL_TOWER_URL",
      "value": "${control_tower_url}"
    },
    {
      "name": "LOCAL_URL",
      "value": "${local_url}"
    },
    {
      "name": "FORMS_API_URL",
      "value": "${forms_api_url}"
    },
    {
      "name": "AREAS_API_URL",
      "value": "${areas_api_url}"
    },
    {
      "name": "RW_AREAS_API_URL",
      "value": "${rw_areas_api_url}"
    },
    {
      "name": "TEAMS_API_URL",
      "value": "${teams_api_url}"
    },
    {
      "name": "GEOSTORE_API_URL",
      "value": "${geostore_api_url}"
    },
    {
      "name": "API_VERSION",
      "value": "${api_version}"
    },
    {
      "name": "MONGODB_HOST",
      "value": "${document_db_endpoint}"
    },
    {
      "name": "MONGODB_PORT",
      "value": "${document_db_port}"
    }
  ],
  "secrets": [
    {
      "name": "DB_SECRET",
      "valueFrom": "${db_secret_arn}"
    }
  ],
  "portMappings": [
    {
      "containerPort": ${container_port},
      "hostPort": ${container_port}
    }
  ],
  "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${container_name}"
       }
  }
}]
